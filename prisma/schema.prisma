generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppUser {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  role String
  address Address?
  orders Order[]
}

model Product {
  id           Int            @id @default(autoincrement())
  createdAt    DateTime       @default(now())
  name         String         
  description  String?
  value        Float
  type         String[]
  calories     Int
  orderProduct OrderProduct[]
  image String?
}

model Address {
  id       Int     @id @default(autoincrement())
  number   Int
  street   String
  province String
  city     String
  zipCode  Int
  user AppUser @relation(fields: [userId], references: [id])
  userId Int @unique
}

model OrderProduct {
  id        Int     @id @default(autoincrement())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
}

model Order {
  id          Int            @id @default(autoincrement())
  totalPrice  Decimal
  products    OrderProduct[]
  orderStatus String
  user AppUser @relation(fields: [userId], references: [id])
  userId Int
}
