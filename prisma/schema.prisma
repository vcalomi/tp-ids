generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String   @db.VarChar(255)
  description   String?
  value  Float
  type String[]
  calories Int
}

model Address {
  id Int @id @default(autoincrement())
  number Int
  street String
  province String
  city String
  zipCode Int
}